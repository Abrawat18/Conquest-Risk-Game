    <?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:gravity="center"
android:orientation="vertical"
android:weightSum="1">


    <ImageButton
        android:id="@+id/btn_single_mode"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:backgroundTint="@color/float_transparent"
        android:scaleType="fitXY"
        android:src="@mipmap/single"
        android:text="Single Mode"
        android:visibility="visible" />

    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fontFamily="serif"
    android:text="Single Mode"
    android:textAlignment="center"
    android:textSize="30dp"
    android:textStyle="bold" />

<ImageButton
    android:id="@+id/btn_tournament_mode"
    android:layout_width="122dp"
    android:layout_height="121dp"
    android:layout_gravity="center"
    android:background="@color/float_transparent"
    android:scaleType="fitXY"
    android:src="@mipmap/tournament"
    android:text="Tournament Mode" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fontFamily="serif"
    android:text="Tournament Mode"
    android:textAlignment="center"
    android:textSize="30dp"
    android:textStyle="bold" />



</LinearLayout>